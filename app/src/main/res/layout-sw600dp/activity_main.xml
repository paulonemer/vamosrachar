<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/background">


    <EditText
        android:id="@+id/pessoas"
        style="@style/textocor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Pessoas"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valor" />

    <EditText
        android:id="@+id/preco"
        style="@style/textocor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="PreÃ§o"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pessoas" />

    <TextView
        android:id="@+id/valor"
        style="@style/textocor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$0,00"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preco">

        <Button
            android:id="@+id/rachar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rachar"
            android:textSize="45sp"
            app:layout_constraintBottom_toTopOf="@+id/falar"
            app:layout_constraintEnd_toEndOf="@+id/compartilhar"
            app:layout_constraintStart_toStartOf="@+id/compartilhar"
            app:layout_constraintTop_toBottomOf="@+id/compartilhar"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/compartilhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="compartilhar"
            android:textSize="45sp"
            app:layout_constraintBottom_toTopOf="@+id/rachar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/falar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Falar"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rachar"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="@+id/rachar"
            app:layout_constraintTop_toBottomOf="@+id/rachar"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>